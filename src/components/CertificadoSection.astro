---
import CertificIcon from "../components/icons/certificado.astro";
---

<section class="py-20 px-4 max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold text-white mb-10 flex items-center gap-2">
        <CertificIcon class="w-6 h-6 text-white" />
        Certificaciones
    </h2>

    <div
        id="cert-carousel"
        class="relative w-full max-w-5xl mx-auto"
        data-carousel="slide"
    >
        <div class="relative aspect-[1920/1408] overflow-hidden rounded-lg">
            <!-- Imagen 1 - activa -->
            <div class="duration-700 ease-in-out" data-carousel-item>
                <img
                    src="curso1.jpg"
                    alt="Certificado 1"
                    class="absolute w-full h-full object-contain top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
                />
            </div>

            <!-- Imagen 2 -->
            <div class="hidden duration-700 ease-in-out" data-carousel-item>
                <img
                    src="curso2.jpg"
                    alt="Certificado 2"
                    class="absolute w-full h-full object-contain top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
                />
            </div>

            <!-- Imagen 3 -->
            <div class="hidden duration-700 ease-in-out" data-carousel-item>
                <img
                    src="curso3.jpg"
                    alt="Certificado 3"
                    class="absolute w-full h-full object-contain top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
                />
            </div>

            <!-- Imagen 4 -->
            <div class="hidden duration-700 ease-in-out" data-carousel-item>
                <img
                    src="curso4.jpg"
                    alt="Certificado 4"
                    class="absolute w-full h-full object-contain top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
                />
            </div>

            <!-- Imagen 5 -->
            <div class="hidden duration-700 ease-in-out" data-carousel-item>
                <img
                    src="curso5.png"
                    alt="Certificado 5"
                    class="absolute w-full h-full object-contain top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
                />
            </div>
        </div>

        <!-- Indicadores -->
        <div
            class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3"
        >
            <button
                type="button"
                class="w-4 h-4 rounded-full bg-white/80 border border-white shadow-md transition-transform hover:scale-110"
                aria-label="Slide 1"
                data-carousel-slide-to="0"></button>
            <button
                type="button"
                class="w-4 h-4 rounded-full bg-white/40 border border-white shadow-md transition-transform hover:scale-110"
                aria-label="Slide 2"
                data-carousel-slide-to="1"></button>
            <button
                type="button"
                class="w-4 h-4 rounded-full bg-white/40 border border-white shadow-md transition-transform hover:scale-110"
                aria-label="Slide 3"
                data-carousel-slide-to="2"></button>
            <button
                type="button"
                class="w-4 h-4 rounded-full bg-white/40 border border-white shadow-md transition-transform hover:scale-110"
                aria-label="Slide 4"
                data-carousel-slide-to="3"></button>
            <button
                type="button"
                class="w-4 h-4 rounded-full bg-white/40 border border-white shadow-md transition-transform hover:scale-110"
                aria-label="Slide 5"
                data-carousel-slide-to="4"></button>
        </div>

        <!-- Controles -->
        <!-- Botón previo -->
        <button
            type="button"
            class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group"
            data-carousel-prev
        >
            <span
                class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-black/50 border border-white/30 shadow-lg hover:bg-black/70"
            >
                <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 6 10">
                    <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 1 1 5l4 4"></path>
                </svg>
            </span>
        </button>

        <!-- Botón siguiente -->
        <button
            type="button"
            class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group"
            data-carousel-next
        >
            <span
                class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-black/50 border border-white/30 shadow-lg hover:bg-black/70"
            >
                <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 6 10">
                    <path
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="m1 9 4-4-4-4"></path>
                </svg>
            </span>
        </button>
    </div>
</section>
