---
// Badge.astro
const { link = "#" } = Astro.props;
---
<a
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="inline-flex items-center px-3 py-1.5 text-xs font-semibold text-green-800 bg-green-100 rounded-md hover:bg-green-200 dark:bg-green-900 dark:text-green-300 dark:hover:bg-green-800 transition-colors"
>
  <slot />
  <svg
    class="w-3.5 h-3.5 ml-2 rtl:rotate-180"
    fill="none"
    viewBox="0 0 14 10"
  >
    <path
      stroke="currentColor"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M1 5h12m0 0L9 1m4 4L9 9"
    />
  </svg>
</a>
